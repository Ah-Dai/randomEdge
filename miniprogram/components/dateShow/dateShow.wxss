.date{
  text-align: center;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.date .date-month{
  font-size: 40rpx;
  /* padding-left: 10rpx; */
}

/* .date .date-slash{
  position: absolute;
  top: 0;
} */
.date .date-slash::after{
  content: '';
  width: 60rpx;
  height: 2rpx;
  background-color: rosybrown;
  position: absolute;
  top: 50rpx;
  left: 0rpx;
  transform: rotate(160deg) translateX(5rpx);
}

.date .date-day{
  font-size: 52rpx;
  font-weight: normal;
  color: rgb(0, 0, 0, .2);
}