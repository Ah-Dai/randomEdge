/* pages/home/home.wxss */
.home {
  height: 100%;
  position: relative;
  font-family: 'Courier New', Courier, monospace;
}

.home .postersImg {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: khaki;
  box-shadow: 0 0 10rpx 4rpx rgb(0, 0, 0, .5);
}

.home .date {
  position: absolute;
  bottom: 0;
  right: 0;
}

.home .content {
  margin-top: 30rpx;
  font-size: 36rpx;
  line-height: 60rpx;
  text-indent: 50rpx;
}

.home .source {
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.source .source_avatarUrl{
  display: block;
}

.source .nickName{
  font-size: 30rpx;
  margin: 8rpx 0 0 14rpx;
  color: rgb(0, 0, 0, .5);
}